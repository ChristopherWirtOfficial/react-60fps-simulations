{
  "compilerOptions": {
    "paths": {
      "src/*": [
        "./src/*"
      ],
      "@hooks/*": [
        "./src/hooks/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@atoms/*": [
        "./src/atoms/*"
      ],
      "@helpers": [
        "./src/helpers.ts"
      ]
    },
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": [
      "node",
      "react",
      "react-dom",
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules/**",
    "**/*.spec.ts"
  ]
}
